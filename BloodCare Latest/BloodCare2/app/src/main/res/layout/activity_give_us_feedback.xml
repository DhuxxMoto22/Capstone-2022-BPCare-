<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".GiveUsFeedback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bcarelogo"
            android:textStyle="bold" />



    </LinearLayout>

    <TextView
        android:id="@+id/RText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="130dp"
        android:fontFamily="serif"
        android:padding="14dp"
        android:text="Very Dissatisfied"
        android:textSize="20dp" />


    <RatingBar
        android:id="@+id/RatingB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="180dp"
        android:numStars="5"
        android:progressBackgroundTint="#EA8B00" />

    <EditText
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="180dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lines="4"
        android:textSize="25dp"
        android:hint="Feedback:"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />


    <View
        android:id="@+id/view2"
        android:layout_width="700dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:background="@android:color/white" />

    <View
        android:layout_width="700dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="600dp"
        android:background="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="610dp"
        android:gravity="center_horizontal"
        android:text="Capstone Project"
        android:textSize="11dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="625dp"
        android:gravity="center_horizontal"
        android:text="BP Care"
        android:textSize="11dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="640dp"
        android:gravity="center_horizontal"
        android:text="Blood Pressure Monitoring Aplication"
        android:textSize="11dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/instr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:padding="14dp"
        android:text="Give Us Feedback"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>